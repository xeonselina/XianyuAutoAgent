# Docker环境配置模板
# 复制此文件为 .env 并填入真实的环境变量值

# =============================================================================
# 应用基础配置
# =============================================================================
FLASK_ENV=production
FLASK_APP=app.py

# 安全配置 - 请在生产环境中更改这些值
SECRET_KEY=your-secret-key-change-in-production
API_KEY=your-api-key-change-in-production

# =============================================================================
# 数据库配置
# =============================================================================
# Docker环境使用host.docker.internal连接宿主机MySQL
DATABASE_URL=mysql+pymysql://username:password@host.docker.internal:3306/database_name

# =============================================================================
# 阿里云配置 - 请填入您的真实密钥
# =============================================================================
ALIYUN_ACCESS_KEY_ID=your_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_access_key_secret

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/inventory_service.log

# =============================================================================
# 安全配置
# =============================================================================
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
CORS_ORIGINS=*

# =============================================================================
# 业务配置
# =============================================================================
DEFAULT_RENTAL_DAYS=7
MAX_RENTAL_DAYS=30
MIN_ADVANCE_BOOKING_DAYS=1
TIMEZONE=Asia/Shanghai

# =============================================================================
# 文件上传配置
# =============================================================================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# =============================================================================
# 缓存配置
# =============================================================================
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# 分页配置
# =============================================================================
POSTS_PER_PAGE=20

# =============================================================================
# 数据库连接池配置
# =============================================================================
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# =============================================================================
# 应用端口配置
# =============================================================================
APP_PORT=5001
APP_HOST=0.0.0.0

# =============================================================================
# 健康检查配置
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30