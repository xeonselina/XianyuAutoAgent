# 库存管理系统本地开发环境配置
# 此文件包含本地开发所需的环境变量

# =============================================================================
# 应用基础配置
# =============================================================================
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=dev-secret-key-local-development
API_KEY=dev-api-key-local-development

# =============================================================================
# 数据库配置 - 本地开发
# =============================================================================
# MySQL本地开发
DATABASE_URL=mysql+pymysql://root:Xs527215!!!@192.168.50.132:33601/test_inventory_management
# 或者使用SQLite（更简单）
# DATABASE_URL=sqlite:///inventory_management.db

# =============================================================================
# Redis配置 - 本地开发（可选）
# =============================================================================
# 如果本地安装了Redis
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FILE=logs/inventory_service.log

# =============================================================================
# 安全配置 - 开发环境
# =============================================================================
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# 跨域配置 - 开发环境允许所有来源
CORS_ORIGINS=*

# =============================================================================
# 业务配置
# =============================================================================
DEFAULT_RENTAL_DAYS=7
MAX_RENTAL_DAYS=30
MIN_ADVANCE_BOOKING_DAYS=1
TIMEZONE=Asia/Shanghai

# =============================================================================
# 文件上传配置
# =============================================================================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# =============================================================================
# 缓存配置
# =============================================================================
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# 分页配置
# =============================================================================
POSTS_PER_PAGE=20

# =============================================================================
# 数据库连接池配置
# =============================================================================
DB_POOL_SIZE=5
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# =============================================================================
# 应用端口配置
# =============================================================================
APP_PORT=5002
APP_HOST=0.0.0.0

# =============================================================================
# 开发环境特殊配置
# =============================================================================
# 启用调试模式
DEBUG=true

# 启用SQL查询日志
SQLALCHEMY_ECHO=true

# 禁用CSRF保护（开发环境）
WTF_CSRF_ENABLED=false

# 健康检查配置
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30
