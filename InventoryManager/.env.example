# InventoryManager 环境变量配置模板
# 复制此文件为 .env 并根据实际环境修改配置值

# =============================================================================
# 应用基础配置
# =============================================================================
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-secret-key-change-in-production
API_KEY=your-api-key-change-in-production

# =============================================================================
# 数据库配置
# =============================================================================
# 本地开发环境（使用本地MySQL）
# DATABASE_URL=mysql+pymysql://root:your_password@localhost:3306/testdb

# Docker环境（使用Docker Compose中的MySQL）
DATABASE_URL=mysql+pymysql://root:123456@host.docker.internal:3306/testdb

# SQLite（测试环境）
# DATABASE_URL=sqlite:///inventory_management.db

# =============================================================================
# 第三方服务配置
# =============================================================================
# 阿里云配置
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-access-key-secret

# 顺丰配置
SF_PARTNER_ID=your-sf-partner-id
SF_CHECKPHONENO=your-sf-check-phone
SF_CHECKWORD=your-sf-check-word

# =============================================================================
# Redis配置（可选）
# =============================================================================
# 本地Redis
# REDIS_URL=redis://localhost:6379/0

# Docker环境Redis
# REDIS_URL=redis://redis:6379/0

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/inventory_service.log

# =============================================================================
# 安全配置
# =============================================================================
# 生产环境安全设置
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# 跨域配置
CORS_ORIGINS=*

# =============================================================================
# 业务配置
# =============================================================================
DEFAULT_RENTAL_DAYS=7
MAX_RENTAL_DAYS=30
MIN_ADVANCE_BOOKING_DAYS=1

# 时区配置
TIMEZONE=Asia/Shanghai

# =============================================================================
# 邮件配置（可选）
# =============================================================================
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_DEFAULT_SENDER=your-email@gmail.com

# =============================================================================
# 文件上传配置
# =============================================================================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# =============================================================================
# 缓存配置
# =============================================================================
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# 分页配置
# =============================================================================
POSTS_PER_PAGE=20

# =============================================================================
# 数据库连接池配置
# =============================================================================
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# =============================================================================
# 应用端口配置
# =============================================================================
APP_PORT=5001
APP_HOST=0.0.0.0

# =============================================================================
# 健康检查配置
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30