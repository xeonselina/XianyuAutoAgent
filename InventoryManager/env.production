# 库存管理系统生产环境配置
# 此文件包含生产环境所需的环境变量
# 注意：生产环境请使用强密码和安全的密钥

# =============================================================================
# 应用基础配置
# =============================================================================
FLASK_ENV=production
FLASK_APP=app.py
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_IN_PRODUCTION
API_KEY=CHANGE_THIS_TO_A_STRONG_API_KEY_IN_PRODUCTION

# =============================================================================
# 数据库配置 - 生产环境
# =============================================================================
# 生产环境MySQL（请根据实际情况修改）
DATABASE_URL=mysql+pymysql://root:Xs527215!!!@192.168.50.132:33601/inventory_management
ALIYUN_ACCESS_KEY_ID=your_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_access_key_secret

# =============================================================================
# Redis配置 - 生产环境
# =============================================================================
# 生产环境Redis（请根据实际情况修改）
REDIS_URL=redis://production_redis:6379/0

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=WARNING
LOG_FILE=logs/inventory_service.log

# =============================================================================
# 安全配置 - 生产环境
# =============================================================================
# 生产环境必须启用HTTPS
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# 跨域配置 - 生产环境限制来源
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# 业务配置
# =============================================================================
DEFAULT_RENTAL_DAYS=7
MAX_RENTAL_DAYS=30
MIN_ADVANCE_BOOKING_DAYS=1
TIMEZONE=Asia/Shanghai

# =============================================================================
# 文件上传配置
# =============================================================================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# =============================================================================
# 缓存配置
# =============================================================================
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# 分页配置
# =============================================================================
POSTS_PER_PAGE=20

# =============================================================================
# 数据库连接池配置
# =============================================================================
DB_POOL_SIZE=20
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# =============================================================================
# 应用端口配置
# =============================================================================
APP_PORT=5002
APP_HOST=0.0.0.0

# =============================================================================
# 生产环境特殊配置
# =============================================================================
# 禁用调试模式
DEBUG=false

# 禁用SQL查询日志
SQLALCHEMY_ECHO=false

# 启用CSRF保护
WTF_CSRF_ENABLED=true

# 健康检查配置
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30

# =============================================================================
# 监控和性能配置
# =============================================================================
# 启用性能监控
ENABLE_MONITORING=true

# 启用健康检查端点
ENABLE_HEALTH_CHECK=true

# 启用指标收集
ENABLE_METRICS=true

# =============================================================================
# 备份配置
# =============================================================================
# 数据库备份配置
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# 邮件配置 - 生产环境
# =============================================================================
# 生产环境邮件服务器（请根据实际情况修改）
MAIL_SERVER=smtp.yourmailserver.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-production-email@yourdomain.com
MAIL_PASSWORD=your-production-email-password
MAIL_DEFAULT_SENDER=your-production-email@yourdomain.com
