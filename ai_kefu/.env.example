# ============================================================
# 闲鱼 AI 客服配置文件
# ============================================================

# ------------------------------------------------------------
# AI 模型配置
# ------------------------------------------------------------
# API Key (默认使用通义千问，通过百炼模型平台获取)
API_KEY=your_api_key_here

# 模型 API 地址 (用于DashScope SDK)
MODEL_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# 模型名称
MODEL_NAME=qwen-max

# ------------------------------------------------------------
# 闲鱼账号配置（可选）
# ------------------------------------------------------------
# 闲鱼 Cookie 字符串（可选）
# 如果不设置，系统将使用浏览器保存的会话
# 首次使用需要手动在浏览器中登录闲鱼
COOKIES_STR=your_cookies_here

# ------------------------------------------------------------
# 浏览器配置
# ------------------------------------------------------------
# 是否无头模式运行（true=无界面，false=显示浏览器窗口）
BROWSER_HEADLESS=false

# 浏览器调试端口（可选，用于远程调试）
# BROWSER_DEBUG_PORT=9222

# 浏览器用户数据目录（用于保存会话）
BROWSER_USER_DATA_DIR=./browser_data

# 浏览器窗口宽度
BROWSER_VIEWPORT_WIDTH=1280

# 浏览器窗口高度
BROWSER_VIEWPORT_HEIGHT=720

# 浏览器代理服务器（可选，格式：http://proxy:port）
# BROWSER_PROXY=

# ------------------------------------------------------------
# AI 自动回复配置
# ------------------------------------------------------------
# 是否启用AI自动回复（true=启用，false=仅记录对话，不调用AI）
# 默认：false（仅记录对话，用于测试和评估）
ENABLE_AI_REPLY=false

# AI Agent 服务地址（后端API地址）
AGENT_SERVICE_URL=http://localhost:8000

# AI Agent 请求超时时间（秒）
AGENT_TIMEOUT=10.0

# AI Agent 最大重试次数
AGENT_MAX_RETRIES=3

# AI Agent 重试延迟（秒）
AGENT_RETRY_DELAY=1.0

# ------------------------------------------------------------
# 消息处理配置
# ------------------------------------------------------------
# 消息过期时间（毫秒，超过此时间的消息将被忽略）
MESSAGE_EXPIRE_TIME=300000

# 人工接管超时时间（秒，默认 1 小时）
# 超过此时间未发送消息，将自动退出人工接管模式
MANUAL_MODE_TIMEOUT=3600

# 人工接管切换关键词（卖家发送此关键词可切换人工/自动模式）
TOGGLE_KEYWORDS=。

# ------------------------------------------------------------
# MySQL 数据库配置（对话持久化存储）
# ------------------------------------------------------------
# MySQL 主机地址
MYSQL_HOST=localhost

# MySQL 端口
MYSQL_PORT=3306

# MySQL 用户名
MYSQL_USER=root

# MySQL 密码
MYSQL_PASSWORD=your_password_here

# MySQL 数据库名
MYSQL_DATABASE=xianyu_conversations

# MySQL 连接池大小
MYSQL_POOL_SIZE=5

# ------------------------------------------------------------
# 租赁业务 API 配置
# ------------------------------------------------------------
# 档期管理 API 基础地址
RENTAL_API_BASE_URL=http://13uy63225pa7.vicp.fun/api/rentals

# 档期查询端点
RENTAL_FIND_SLOT_ENDPOINT=/find-slot

# ------------------------------------------------------------
# 日志配置
# ------------------------------------------------------------
# 日志级别（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO
